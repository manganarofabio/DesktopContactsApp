<Window x:Class="DesktopContactsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        xmlns:uc="clr-namespace:DesktopContactsApp.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <ListView x:Name="contactsListView" Margin="10" ItemsSource="{Binding contacts}"
                  SelectionChanged="contactsListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:ContactControl Contact="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>

        <Button Content="New Contact" Click="Button_Click" Margin="10"/>
        <TextBox Margin="0 5 0 5"
                 TextChanged="TextBox_TextChanged"/>
        

    </StackPanel>
</Window>
